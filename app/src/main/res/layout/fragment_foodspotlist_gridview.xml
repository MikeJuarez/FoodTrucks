<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fragment_foodspotlist_menuContainer_gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:transitionName="@string/transition_grid_view_icon"
            android:id="@+id/fragment_foodspotlist_grid_button_gridView"
            android:src="@drawable/ic_grid"
            style="@style/fragment_foodspotlist_menu"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:transitionName="@string/transition_foodspot_recyclerview"
        android:visibility="visible"
        android:id="@+id/fragment_foodspotlist_foodspot_rv_gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>


</LinearLayout>
